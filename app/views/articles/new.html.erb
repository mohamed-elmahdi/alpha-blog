      <div class="alert alert-danger" role="alert">
        <h3 class="alert-heading">
          <%= pluralize(@article.errors.count, "error") %> prevented the article from being created
        </h3>
        <%= render 'layouts/errors' %>
      </div>
    </div>
<% end %>


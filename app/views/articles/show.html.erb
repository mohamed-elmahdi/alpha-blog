<h2 align="center" class="show-title">Title:  <%= @article.title %></h2>
<div class="col-md-8 ml-md-auto mr-md-auto">
  <div class="card">
    <div class="card-body">
      <h4 class="card-title center">
        Description
      </h4>
      <hr>
      <p class="card-text">
        <%= @article.description %>
      </p>
    </div>
    <div class="card-footer">
      <%=link_to "Edit this article", edit_article_path(@article), class: "btn btn-primary btn-sm" %>
      <%=link_to "Delete this article", article_path(@article), class: "btn btn-danger btn-sm", method: :delete, data: {confirm: "Are you sure?"}%>
      <%=link_to "View all articles", articles_path, class: "btn btn-success btn-sm" %>
    </div>
  </div>
</div>


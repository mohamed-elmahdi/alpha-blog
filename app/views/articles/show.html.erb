<h2 align="center" class="show-title">Title:  <%= @article.title %></h2>
<div class="col-md-8 ml-md-auto mr-md-auto">
  <div class="card center">
    <div class="card-body">
      <% if @article.user %>
        <div class="card-block">
          <%= link_to gravatar_for(@article.user), user_path(@article.user), class: "card-img-top" %>
        </div>
        <div class="card-block">
          <%= link_to @article.user.username, user_path(@article.user), class: "card-link font-weight-bold" %>
        </div>
        <div class="card-block">
          <small><%= pluralize(@article.user.articles.count, "article") %></small>
        </div>
      <% end %>
      <h4 class="card-title center">
        Description
      </h4>
      <hr>
      <p class="card-text">
        <%= @article.description %>
      </p>
    </div>
    <% if logged_in? && (current_user == @article.user || current_user.admin?) %>
      <div class="card-footer">
        <%=link_to "Edit this article", edit_article_path(@article), class: "btn btn-primary btn-sm" %>
        <%=link_to "Delete this article", article_path(@article), class: "btn btn-danger btn-sm", method: :delete, data: {confirm: "Are you sure?"}%>
        <%=link_to "View all articles", articles_path, class: "btn btn-success btn-sm" %>
      </div>
    <% end %>
  </div>
</div>


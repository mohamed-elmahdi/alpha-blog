<% if obj.errors.any? %>
  <div class="col-md-8">
      <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">
          <%= pluralize(obj.errors.count, "error") %> prevented the <%= cname %> from being <%= opType %>
        </h4>
        <ul>
          <% obj.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
<% end %>

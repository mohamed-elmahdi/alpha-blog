<div class='row'>
  <div class= 'col-sm-12'>
    <%= form_for @article do |f| %>
      <div class="form-group">
        <div class="col-sm-2">
          <%= f.label :title %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :title, class:"form-control", placeholder: "Title of article", autofocus: true  %>
        </div>
      </div>
      <!--<div class="col-5" style="background-color: blue">fgdf</div>
      <div class="col-5" style="background-color: red"> dsfsd</div>-->
      <div class="form-group">
        <div class="col">
        <%= f.label :description %>
        </div>
        <div class= "col-sm-8">
        <%= f.text_area :description, class:"form-control", rows: 10, placeholder: "Description" %>
        </div>
      </div>
      <div class="col create-btn update-btn">
        <%= f.submit class: "btn btn-danger btn-lg"%>
      </div>
    <%end%>
    <div class="col-sm-4 ml-sm-auto mr-sm-auto">
      [ <%=link_to "Cancel request and return to articles listing", articles_path %> ]
    </div>
  </div>
</div>
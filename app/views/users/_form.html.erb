<div class='row'>
  <div class= 'col-sm-12'>
    <%= form_for @user do |f| %>
      <div class="form-group">
        <div class="col-sm-2">
          <%= f.label :username %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :username, class:"form-control", placeholder: "Enter your username", autofocus: true  %>
        </div>
      </div>
      <!--<div class="col-5" style="background-color: blue">fgdf</div>
      <div class="col-5" style="background-color: red"> dsfsd</div>-->
      <div class="form-group">
        <div class="col">
        <%= f.label :email %>
        </div>
        <div class= "col-sm-8">
        <%= f.text_field :email, class:"form-control", placeholder: "Enter your email" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col">
        <%= f.label :password %>
        </div>
        <div class= "col-sm-8">
        <%= f.password_field :password, class:"form-control", placeholder: "Enter your password" %>
        </div>
      </div>
      <div class="col create-btn update-btn">
        <%= f.submit @user.new_record? ? "Sign up" : "Update account", class: "btn btn-danger btn-lg" %>
      </div>
    <%end%>
    <div class="col-sm-4 ml-sm-auto mr-sm-auto">
      [ <%=link_to "Cancel request and return to articles listing", articles_path %> ]
    </div>
  </div>
</div>
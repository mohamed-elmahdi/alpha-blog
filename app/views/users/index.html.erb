<h1 align="center" class="user-title">All Alpha Bloggers</h1>
<%= will_paginate %>
<% @users.each do |user| %>
  <div class="row center">
    <div class="col-md-5 mx-auto card user-card">
      <div class="card-block">
        <%= link_to gravatar_for(user), user_path(user), class: "card-img-top" %>
      </div>
      <div class="card-block">
        <%= link_to user.username, user_path(user), class: "card-link font-weight-bold" %>
      </div>
      <div class="card-block">
        <small><%= pluralize(user.articles.count, "article") %></small>
      </div>
      <% if current_user && current_user.admin? %>
        <div>
          <%= link_to "Delete this user", user_path(user), method: :delete,
          data: {confirm: "Are you sure you want to delete this user and all his/her articles"} %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
<%= will_paginate %>